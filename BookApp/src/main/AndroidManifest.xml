<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bjbsh.linford.bookapp.activity">
    <!--添加文件读写权限-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/bookapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        >


        <activity android:name=".MainActivity" android:theme="@style/NoActionbarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchBookActivity" android:theme="@style/NoActionbarTheme"/>
        <activity android:name=".SearchResultActivity" android:theme="@style/NoActionbarTheme"/>
        <activity android:name=".AddBookActivity" android:theme="@style/NoActionbarTheme">

        </activity>
        <activity android:name=".UpdateBookActivity" android:theme="@style/NoActionbarTheme"/>
        <activity android:name=".ClassifyManagerActivity" android:theme="@style/NoActionbarTheme">

        </activity>
    </application>

</manifest>